<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div></div>
    <button id="abdul">odd and even</button>
    <script>
        var abdul=document.getElementById("abdul");
        abdul.addEventListener("click",fn1)
        function fn1(){
            for(let i=0;i<=100;i++){
                var c= document.createElement("p");
                if(i%2==0){
                    c.innerText=i+"even";
                    c.style.color="red";
                    
                    

                }
                else{
                    c.innerText=i+"odd";
                    c.style.color="yellow";
                }
                var d=document.querySelector("div");
                d.append(c);

            }
        }
    </script>
</body>
</html>
